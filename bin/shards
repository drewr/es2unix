#!/usr/bin/env python
# -*- python -*-

from es2unix import shards

def outshard(index, shard, primary, bytes_, addr, name):
    out('%s %s %s %15s %-15s %s' % \
          (index, shard, primary, bytes_, addr, name))

url = 'http://localhost:9200'

for sh in shards(url):
    print \
        sh['_index'], \
        sh['_shidx'], \
        sh['_primary'], \
        sh['_bytes'], \
        sh['_ip'], \
        sh['_node']['name']

